<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <%- include('../partials/headTags.ejs') %>

  <script 
    src="../assets/js/create-service.js"
    defer></script>

  <link rel="stylesheet" href="../assets/css/services.css">

  <script 
    src="../assets/js/services.js"
    defer>
  </script>

  <title>SAS | <%= pageInfo.pageName %> </title>
</head>
<body>
  <%# Menu lateral %>
  <%- include('../partials/menu.ejs')  %>

  

  <h1 class="text-center my-4">Lista de serviços </h1>

  <div class="container">
    <% if( pageInfo.services.length > 0 ) { %>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Serviço</th>
          <th scope="col">Descrição</th>
          <th scope="col">Duração</th>
          <th scope="col">Preço</th>
          <th scope="col">Opções</th>
        </tr>
      </thead>
      <tbody>
        <% pageInfo.services.forEach( service => { %>
          <% if(service.status == false) { %>
            <tr class="disabled">
              <td class="active-service"><%= service.serviceName %></td>
              <td><%= service.description %></td>
              <td><%= service.durationTime %></td>
              <td>R$<%= service.price %></td>
              <td>
                <span 
                  class="material-icons edit-btn"
                  data-activated="update-service"
                  data-id="<%= service._id %>">
                  edit
                </span>
                <span 
                  data-id="<%= service._id %>"
                  class="material-icons delete-btn">
                  delete_forever
                </span>
              </td>
            </tr>
          <% } else { %>
            <tr>
            <td><%= service.serviceName %></td>
            <td><%= service.description %></td>
            <td><%= service.durationTime %></td>
            <td>R$<%= service.price %></td>
            <td>
              <a 
                href='/edit-service/<%= service._id %>'
                data-id="<%= service._id %>"
                data-activated="update-service"
                class="material-icons edit-btn">
                edit
              </a>
              <span 
                data-id="<%= service._id %>"
                class="material-icons delete-btn">
                delete_forever
              </span>
            </td>
          </tr>
          <% } %>
        <% }) %>
      </tbody>
    </table>
    <div class="d-grid">
      <button 
        type="button" 
        class="btn btn-success new-service-btn"
        data-activated="new-service">
        Novo serviço</button>
    </div>
    <% } else { %>
      <hr>
      <h6 class="text-center">Não há serviços cadastrados</h6>
      <hr>
      <div class="d-grid">
        <button 
          type="button" 
          class="btn btn-success new-service-btn" 
          data-activated="new-service">
          Novo serviço</button>
      </div>
    <% } %>
  </div>

  <div 
    class="modal fade" 
    id="exampleModal" 
    tabindex="-1" 
    aria-labelledby="exampleModalLabel" 
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Cadastrar novo serviço</h5>
          <button 
            type="button" 
            class="btn-close" 
            data-bs-dismiss="modal" 
            aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form 
            novalidate
            id="create-user-form"
            class="create-user-form align-self-center"
            >

            <div class="container">
              <div class="mb-3">
                <label 
                for="sname"
                class="form-label">
                <b>Nome do serviço</b>
              </label>
              <input 
                type="text" 
                class="form-control"
                placeholder="Digite o nome do serviço" 
                id="sname" 
                data-bs-toggle="tooltip" data-bs-placement="top"
                name="sname"
                required/>
              </div>
            </div>
            <div class="container">
              <div class="mb-3">
                <label 
                for="description"
                class="form-label">
                <b>Descrição</b>
              </label>
              <textarea 
                type="text" 
                class="form-control"
                placeholder="Descreva o serviço em poucas palavras" 
                id="description" 
                name="description"
                required></textarea>
              </div>
            </div>
            <div class="container">
              <div class="mb-3">
                <label 
                  for="select"
                  class="form-label">
                  <b>Duração</b>
                </label>
                <select  
                  class="form-select form-control" 
                  id="duration"
                  aria-label="duration"
                  required>
                    <option selected value="default">Clique para ver as opções</option>
                    <option value="1">30m</option>
                    <option value="2">1h</option>
                    <option value="3">1h30</option>
                    <option value="3">2h</option>
                </select>
              </div>
            </div>
            
            <div class="container">
              <div class="mb-3">
                <label 
                for="price"
                class="form-label">
                <b>Preço</b>
              </label>
              <input 
                type="number" 
                class="form-control"
                placeholder="Digite o preço" 
                step="0.01"
                min="0.00"
                id="price" 
                name="price"
                required/>
              </div>
            </div>

            <div class="container">
              <div class="mb-3">
                <label 
                for="status"
                class="form-label">
                  <b>Status</b>
                </label>
                <div class="form-check form-switch">
                  <input
                    class="form-check-input status-check-input shadow-none" 
                    value="true"
                    type="checkbox" 
                    checked="true"
                    id="flexSwitchCheckDefault">
                    <span class="status-check-text">Ativado</span>
                </div>
              </div>
            </div>
            <div class="group">
              <button   
                type="button" 
                class="btn btn-secondary" 
                data-bs-dismiss="modal">Voltar</button>
              <button
                class="btn btn-primary"
                id="create-service-btn">Salvar</button>
            </div>
          </form>
        
        <div class="modal-footer d-flex">
          
        </div>
      </div>
    </div>
  </div>

  <%# Footer %>
  <%- include('../partials/footer.ejs') %>
</body>
</html>