<body>
	<main>
		<h1>Meus Dados</h1>

		<div class="row">
			<label for="fantasyName" class="col-form-label">
				Nome Fantasia
			</label>
			<div class="col">
				<input 
				type="text" 
				class="form-control" 
				id="fname" 
				value="<%= user.fantasyName %>"
				readonly
				disabled>
			</div>
			<span class="material-icons edit-btn" data-type="fname">
				edit
			</span>
			<span class="material-icons save-btn" data-type="fname">
				save
			</span>
		</div>
		<div class="row">
			<label for="fantasyName" class="col-form-label">
				Nome de usuÃ¡rio
			</label>
			<div class="col">
				<input 
				type="text" 
				class="form-control" 
				id="uname" 
				value="<%= user.userName %>"
				readonly
				disabled>
			</div>
			<span class="material-icons edit-btn" data-type="uname">
				edit
			</span>
			<span class="material-icons save-btn" data-type="uname">
				save
			</span>
		</div>
		<div class="row">
			<label for="fantasyName" class="col-form-label">
				Email
			</label>
			<div class="col">
				<input 
				type="email" 
				class="form-control" 
				id="email" 
				value="<%= user.email %>"
				readonly
				disabled>
			</div>
			<span class="material-icons edit-btn" data-type="email">
				edit
			</span>
			<span class="material-icons save-btn" data-type="email">
				save
			</span>
		</div>
	</main>
	<div class="btn-group">
		<a class="btn delete-btn">
			<span class="material-icons" data-id="<%= user._id%>" >delete</span>
		</a>
		<a class="btn" href="/">
			Voltar
		</a>
		<a onclick="saveInfo()" class="btn save-btn" href="">
			Salvar
		</a>
	</div>
	<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
    integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
